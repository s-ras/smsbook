{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@app/*": [
        "./src/app/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@database/*": [
        "./src/database/*"
      ],
      "@drizzle/*": [
        "./src/drizzle/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@schema/*": [
        "./src/schema/*"
      ],
      "@state/*": [
        "./src/state/*"
      ],
      "@ui/*": [
        "./src/ui/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}